[icingaweb2-users-ldap]
type = "ldap"
hostname = "{{ ldap_server }}"
port = "389"
encryption = "starttls"
root_dn = "{{ ldap_basedn }}"
bind_dn = "cn={{ ansible_hostname }},ou=Server,{{ ldap_basedn }}"
bind_pw = "{{ new_passwd.passwd }}"

[icingaweb2-ido-pgsql]
type = "db"
db = "pgsql"
host = "/var/run/postgresql"
port = "5432"
dbname = "icinga2"
username = "www-data"
password = ""
charset = ""
persistent = "0"

